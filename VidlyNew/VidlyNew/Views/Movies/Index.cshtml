    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
@Html.ActionLink("New Movie", "Add", "Movies", null, new { @class = "btn btn-primary" })
<br>
<br>
<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genre Type</th>
            <th>Delete</th>
        </tr>
    </thead>
