@model IEnumerable<VidlyNew.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>
<br>
<table id="movies" class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genre Type</th>
        </tr>
    </thead>
</table>

@section scripts
{
    <script>
        $(document).ready(function () {

            var movieTable = $("#movies").DataTable({
                ajax: {
                    url: "/api/movies",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name",
                    },
                    {
                        data: "genreType.name",
                    }
                ]
            });
        });
    </script>
}

